extend ../layouts/main-layout

block styles
    link(rel="stylesheet", href="/css/orders.css")

block content
    if orders.length > 0
        ul.orders
            each order in orders
                li.orders__item.card
                    h1 הזמנה מס' - ##{order._id} - 
                        a(href="/orders/" + order._id) קבלה
                    ul.orders__products
                        each p in order.products
                            li.orders__products-item #{p.product.title} (#{p.quantity})
    else
        h1 לא נמצאו הזמנות!